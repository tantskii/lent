  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>Name</th>
        <th>Rss Link</th>
        <th>Action</th>
      </tr>
    </thead>
    
    <tbody>
      <% @sources.each do |source| %>
        <tr>
          <td><%= source.id %></td>
          <td><%= source.name %></td>
          <td><%= link_to 'Источник', source.link %></td>

          <% if current_user.sources.include?(source) %>
            <td>
              <%= form_tag(controller: "source_users", action: "destroy", method: 'post') do %>
                <%= hidden_field_tag(:source_id, source.id) %>
                <%= submit_tag("Удалить", class:"btn btn-default") %>
              <% end %>  
            </td>
          <% else %>  
            <td>
              <%= form_tag(controller: "source_users", action: "create", method: 'post') do %>
                <%= hidden_field_tag(:source_id, source.id) %>
                <%= submit_tag("Читать", class:"btn btn-primary") %>
              <% end %>
            </td>
          <% end %>  
        </tr>
      <% end %>
    </tbody>
  </table>
