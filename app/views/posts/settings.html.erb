  <table class="table table-hover">
    <thead>
      <tr>
        <th>id</th>
        <th>Name</th>
        <th>Rss Link</th>
        <th>Action</th>
      </tr>
    </thead>
    
    <tbody>
      <% @sources.each do |source| %>
        <tr>
          <td><%= source.id %></td>
          <td><%= source.name %></td>
          <td><%= link_to 'Источник', source.link %></td>

          <% if current_user.sources.include?(source) %>
            <td>
              <%= render partial: 'posts/unread', locals: {source: source} %> 
            </td>
          <% else %>  
            <td>
              <%= render partial: 'posts/to_read', locals: {source: source} %> 
            </td>
          <% end %>  
        </tr>
      <% end %>
    </tbody>
  </table>
